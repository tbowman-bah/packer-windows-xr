{
  "builders": [
    {
			"output_directory": "virtualbox-{{user `vm_name`}}",
      "headless": "{{user `headless`}}",
      "boot_command": "",
      "boot_wait": "10m",
      "vm_name": "{{user `vm_name`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "Windows10_64",
			"guest_additions_path": "C:/Windows/Temp/VBoxGuestAdditions.iso",
      "guest_additions_mode": "upload",
      "format": "ova",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "communicator": "winrm",
      "winrm_username": "{{user `username`}}",
      "winrm_password": "{{user `username`}}",
      "winrm_timeout": "2h",
      "winrm_port": "5985",
      "winrm_use_ssl": "false",
      "winrm_insecure": "true",
      "cpus": "4",
      "disk_size": "60000",
      "memory": "4096",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--vram","128" ],
				["modifyvm", "{{.Name}}", "--graphicscontroller","vboxsvga" ]
      ],
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/fixnetwork.ps1",
				"./scripts/enable-winrm.ps1",
				"./scripts/disable-winrm.ps1",
				"./scripts/disable-screensaver.ps1",
				"./scripts/updates-service.ps1",
				"./scripts/win-updates.ps1"
      ],
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\""
    }
  ],
	"variables": {
		"_comment": "Variables below should be overridden by user",
		"iso_url": "",
		"iso_checksum": "",
		"autounattend": "./answer_file/win10EntEval/autounattend.xml",
		"vm_name" :"Windows10_64_base",
		"headless": "true",
    "username": "vmr",
    "vagrantcloud_token": "",
    "boxtag": "",
    "version": "4.0.3",
    "version_description": "Windows 10 OS + R environment"
	},
	"post-processors": [
		[
			{	
				"type": "vagrant",
				"compression_level": "9",
				"output": "{{.Provider}}_{{user `vm_name`}}.box",
				"keep_input_artifact": true
			},
      {
        "type": "vagrant-cloud",
        "box_tag": "{{ user `boxtag` }}",
        "access_token": "{{user `vagrantcloud_token` }}",
        "version": "{{user `version` }}.{{timestamp}}",
        "keep_input_artifact": false,
        "version_description": "{{ user `version_description` }}"
      }
		]
	],
	"provisioners": [
		{
			"type": "powershell",
			"elevated_user": "{{user `username`}}",
      "elevated_password": "{{user `username`}}",
			"execute_command": "powershell -ExecutionPolicy ByPass -File {{.Path}}",
			"scripts" : [
				"./scripts/enable-guest-additions.ps1"
			]
		},
		{
			"type": "windows-restart",
			"pause_before": "10s"
		},
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "inventory_file": "./group_vars/inventory.yml",
      "use_proxy": false,
      "extra_arguments": [
        "-l windows" ,
        "--extra-vars",
        "winrm_user={{ .WinRMUser }}",
        "winrm_password={{ .WinRMPassword }}",
        "winrm_port={{ .WinRMPort }}",
        "ansible_winrm_server_cert_validation=ignore",
        "-vvv" ],
      "user": "{{ user `username` }}"
    }
	]
}
